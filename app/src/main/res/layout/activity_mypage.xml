<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">
    <TextView
        android:id="@+id/title_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 청정"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/value_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보보"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/title_mypage"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_sir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 님"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_mypage"
        app:layout_constraintStart_toEndOf="@+id/value_nickname"/>

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        app:layout_constraintTop_toBottomOf="@+id/value_nickname"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/value_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24세, 청년 취업정책 관심"
        android:textSize="13dp"
        android:textColor="#888888"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text_welcome"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/icon_mypage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_mypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_mypage"/>

    <View
        android:id="@+id/line_mypage"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f29849"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/value_attr"/>


    <ImageView
        android:id="@+id/icon_fav"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/line_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_feather_star"/>
    <TextView
        android:id="@+id/text_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심 정책 관리"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_fav"
        app:layout_constraintTop_toBottomOf="@id/line_mypage"/>

    <Button
        android:id="@+id/btn_m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="10dp"
        android:text=">"
        android:textSize="25dp"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_mypage"/>

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_fav"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_person"/>
    <TextView
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 관리"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_fav"
        app:layout_constraintTop_toBottomOf="@id/text_fav"/>

    <Button
        android:id="@+id/btn_m2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:text=">"
        android:textSize="25dp"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_m1"/>

    <ImageView
        android:id="@+id/icon_filter"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_feather_filter2"/>
    <TextView
        android:id="@+id/text_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터 설정 관리"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_fav"
        app:layout_constraintTop_toBottomOf="@id/text_profile"/>

    <Button
        android:id="@+id/btn_m3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:text=">"
        android:textSize="25dp"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_m2"/>

</androidx.constraintlayout.widget.ConstraintLayout>