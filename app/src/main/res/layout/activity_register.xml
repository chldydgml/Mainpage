<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/title_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/bmdohyeon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_sign"/>

    <EditText
        android:id="@+id/input_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  아이디 (이메일 형식)"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_id"/>
    <TextView
        android:id="@+id/title_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패스워드"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_id"/>

    <EditText
        android:id="@+id/input_pwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  패스워드"
        android:inputType="textPassword"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_pwd"/>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_pwd"/>
    <EditText
        android:id="@+id/input_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  이름"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_name"/>

    <TextView
        android:id="@+id/title_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_name"/>

    <EditText
        android:id="@+id/input_year"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="47dp"
        android:inputType="textMultiLine|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_birth"/>
    <TextView
        android:id="@+id/text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="년"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@id/input_year"
        app:layout_constraintStart_toEndOf="@+id/input_year"/>


    <EditText
        android:id="@+id/input_month"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine|numberDecimal"
        app:layout_constraintStart_toEndOf="@id/text_year"
        app:layout_constraintTop_toBottomOf="@+id/title_birth"/>
    <TextView
        android:id="@+id/text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@id/input_month"
        app:layout_constraintStart_toEndOf="@+id/input_month"/>

    <EditText
        android:id="@+id/input_day"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="#eeeeee"
        android:textSize="15dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine|numberDecimal"
        app:layout_constraintStart_toEndOf="@id/text_month"
        app:layout_constraintTop_toBottomOf="@+id/title_birth"/>
    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@id/input_day"
        app:layout_constraintStart_toEndOf="@+id/input_day"/>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[필수] 만 14세 이상입니다"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/input_year"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[필수] 이용약관 및 개인정보 수집 및 이용에 동의합니다"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check1"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[선택] 광고성 정보 수신에 동의합니다"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check2"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:text="가입하기"
        android:textSize="20dp"
        app:backgroundTint="#F3AB6C"
        app:layout_constraintTop_toBottomOf="@id/check3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>